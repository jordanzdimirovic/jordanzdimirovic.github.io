{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "CO2 Emissions",
    "width": 800,
    "height": 400,
    "projection": {"type": "equirectangular"},
    "data": {
        "url": "countriestopo.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"} 
    },

    "transform": [
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                    "url": "co2_2020.csv",
                    "format": {
                        "type": "csv",
                        "parse": {"co2_tonnes": "number"}
                    }
                },
                "key": "Country",
                "fields": ["Annual CO₂ emissions (mega-tonnes)"]
            }
            
            
        }
    ],
    "mark": {"type": "geoshape", "tooltip": true},
    "encoding": {
        "color": {
            "field": "Annual CO₂ emissions (mega-tonnes)",
            "type": "quantitative",
            "scale": {"type": "log"}
        },
        "tooltip": [
            {"field": "properties.NAME", "title": "Country"},
            {"field": "Annual CO₂ emissions (mega-tonnes)", "title": "CO₂ (Mt)"}
        ]
    }
    
}